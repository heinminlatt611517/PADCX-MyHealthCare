<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:elevation="@dimen/margin_card_medium"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    app:cardCornerRadius="@dimen/card_cornor_radius"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/card_evaluation"
    android:layout_margin="5dp"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/img_doctor_profile"
            android:src="@drawable/ic_baseline_info_24"
            android:scaleType="fitXY"
            android:padding="@dimen/margin_card_medium"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_margin="@dimen/margin_small"
            android:maxLines="2"
            android:ellipsize="end"
            android:id="@+id/tv_doctorName"
            android:textSize="@dimen/text_small"
            android:text="Dr . Mg Mg Win"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_margin="@dimen/margin_small"
            android:textSize="@dimen/text_small"
            android:maxLines="2"
            android:id="@+id/tv_specialityName"
            android:ellipsize="end"
            android:text="အရေပြားနှင့် အလှပရေးရာ"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>