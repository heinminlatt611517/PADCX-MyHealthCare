<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical">

 <androidx.appcompat.widget.Toolbar
     android:layout_width="match_parent"
     android:background="@color/white"
     app:titleTextColor="@color/black"
     app:title="@string/patient_info"
     android:elevation="4dp"
     app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
     android:theme ="?attr/actionBarTheme"
     android:layout_height="?actionBarSize"
     android:id="@+id/tb_casesummary"/>


 <com.kofigyan.stateprogressbar.StateProgressBar
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     app:spb_currentStateNumber="one"
     app:spb_maxStateNumber="two"
     app:spb_stateDescriptionColor="@color/blue_800"
     android:layout_marginTop="@dimen/margin_medium"
     android:id="@+id/state_progress_bar"
     android:layout_gravity="center"/>

             <com.badoualy.stepperindicator.StepperIndicator
                 android:id="@+id/stepper_indicator"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="16dp"
                 android:layout_marginRight="16dp"
                 app:stpi_indicatorColor="@color/blue_500"
                 android:layout_marginTop="@dimen/margin_medium"
                 android:layout_marginBottom="15dp"
                 app:stpi_labels="@array/stepLabels"/>


</LinearLayout>