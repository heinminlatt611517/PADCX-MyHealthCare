<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:elevation="2dp">
        <TextView
            android:layout_gravity="left"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:id="@+id/tv_back"
            android:text="@string/profilelabel"/>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="130dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_medium_3"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_main_profile"
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/user"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:background="@drawable/edit_profile_transparent_bg"
                        android:text="@string/upload_photo"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/btn_upload"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/phone"
                        android:textSize="@dimen/doctor_profile_text_size"
                        android:textColor="@color/doctor_profile_text_color"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="18dp"/>
                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        app:cardElevation="3dp"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/white">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_corner_btn_white"
                            android:hint="Phone number"
                            android:padding="10dp"
                            android:textSize="12sp"
                            android:singleLine="true"
                            android:inputType="phone"
                            android:id="@+id/et_phone"
                            android:layout_margin="5dp"/>
                    </androidx.cardview.widget.CardView>



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/doctor_profile_text_size"
                        android:textColor="@color/doctor_profile_text_color"
                        android:text="@string/experience"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="18dp"/>
                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        app:cardElevation="3dp"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/white">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_corner_btn_white"
                            android:hint="@string/experience"
                            android:padding="10dp"
                            android:id="@+id/et_experience"
                            android:textSize="13sp"
                            android:inputType="phone"
                            android:layout_margin="5dp"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/address"
                        android:textSize="@dimen/doctor_profile_text_size"
                        android:textColor="@color/doctor_profile_text_color"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="18dp"/>
                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        app:cardElevation="3dp"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/white">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_corner_btn_white"
                            android:hint="@string/address"
                            android:padding="10dp"
                            android:scrollbars="vertical"
                            android:id="@+id/et_address"
                            android:maxLines="3"
                            android:lines="3"
                            android:textSize="13sp"
                            android:maxLength="2000"
                            android:gravity="left"
                            android:textColor="@color/black"
                            android:inputType="textMultiLine"
                            android:layout_margin="5dp"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/patient_dateOfbirth"
                        android:textSize="@dimen/doctor_profile_text_size"
                        android:textColor="@color/doctor_profile_text_color"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="18dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:weightSum="3"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:layout_width="0dp"
                            app:cardElevation="3dp"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="10dp"
                            app:cardBackgroundColor="@color/white">
                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:padding="5dp"
                                android:spinnerMode="dialog"
                                android:entries="@array/days"
                                android:id="@+id/day_spinner"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:layout_width="0dp"
                            app:cardElevation="3dp"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="10dp"
                            app:cardBackgroundColor="@color/white">
                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:padding="5dp"
                                android:spinnerMode="dialog"
                                android:entries="@array/months"
                                android:id="@+id/month_spinner"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:layout_width="0dp"
                            app:cardElevation="3dp"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="10dp"
                            app:cardBackgroundColor="@color/white">
                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:padding="5dp"
                                android:spinnerMode="dialog"
                                android:entries="@array/years"
                                android:id="@+id/year_spinner"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/gender"
                        android:textSize="@dimen/doctor_profile_text_size"
                        android:textColor="@color/doctor_profile_text_color"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="18dp"/>
                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        app:cardElevation="3dp"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/white">
                        <RadioGroup
                            android:id="@+id/gender_radio_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <RadioButton
                                android:id="@+id/male"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="အမျိုးသား"
                                />

                            <RadioButton
                                android:layout_marginLeft="20dp"
                                android:id="@+id/female"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="အမျိုးသမီး"
                                />
                        </RadioGroup>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/degree"
                        android:textSize="@dimen/doctor_profile_text_size"
                        android:textColor="@color/doctor_profile_text_color"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="18dp"/>
                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        app:cardElevation="3dp"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/white">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_corner_btn_white"
                            android:hint="@string/degree"
                            android:padding="10dp"
                            android:scrollbars="vertical"
                            android:id="@+id/et_degree"
                            android:maxLines="3"
                            android:lines="3"
                            android:textSize="13sp"
                            android:maxLength="2000"
                            android:gravity="left"
                            android:textColor="@color/black"
                            android:inputType="textMultiLine"
                            android:layout_margin="5dp"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/biography"
                        android:textSize="@dimen/doctor_profile_text_size"
                        android:textColor="@color/doctor_profile_text_color"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="18dp"/>
                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        app:cardElevation="3dp"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/white">


                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_corner_btn_white"
                            android:hint="@string/biography"
                            android:padding="10dp"
                            android:id="@+id/et_biography"
                            android:textSize="13sp"
                            android:maxLines="5"
                            android:lines="5"
                            android:scrollbars="vertical"
                            android:maxLength="3000"
                            android:gravity="left"
                            android:textColor="@color/black"
                            android:inputType="textMultiLine"
                            android:layout_margin="5dp"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

            <com.google.android.material.button.MaterialButton
                android:layout_width="175dp"
                android:layout_margin="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingBottom="5dp"
                android:textColor="@color/white"
                android:layout_height="45dp"
                android:layout_gravity="center"
                app:backgroundTint="@color/blue_800"
                android:id="@+id/btn_save"
                android:text="@string/save"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</LinearLayout>