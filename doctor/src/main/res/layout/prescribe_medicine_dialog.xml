<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <org.mmtextview.components.MMTextView
       android:id="@+id/tv_medicineName"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
       android:text="Paracetamol"
       android:textColor="@color/black"
       android:layout_margin="@dimen/margin_medium_3"
       android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topLayout"
        android:layout_marginTop="@dimen/margin_medium_3"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/tv_medicineName">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">
            <org.mmtextview.components.MMTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_3"
                android:layout_marginBottom="@dimen/margin_medium"
                android:text="@string/number"/>

            <org.mmtextview.components.MMTextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginBottom="@dimen/margin_medium"
                android:text="@string/use_medicine"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

                <RelativeLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner_btn_white"
                        android:padding="10dp"
                        android:maxLines="1"
                        android:textSize="13sp"
                        android:hint="0"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:id="@+id/ed_number"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="tab"
                        android:paddingRight="10dp"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:textStyle="bold"/>

                </RelativeLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/ed_conut"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner_btn_white"
                    android:padding="10dp"
                    android:maxLines="1"
                    android:textSize="13sp"
                    android:hint="1"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"/>

                <TextView
                    app:layout_constraintEnd_toEndOf="@+id/ed_conut"
                    app:layout_constraintBottom_toBottomOf="@+id/ed_conut"
                    android:layout_width="1dp"
                    android:background="@color/black"
                    android:layout_marginRight="2dp"
                    app:layout_constraintTop_toTopOf="@+id/ed_conut"
                    android:layout_height="33dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/middleLayout"
        android:layout_marginTop="@dimen/margin_medium_3"
        app:layout_constraintTop_toBottomOf="@+id/topLayout">

        <org.mmtextview.components.MMTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium_3"
            android:layout_marginBottom="@dimen/margin_medium"
            android:text="@string/count"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_morning"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/morning"
            android:textColor="@color/grey_600"
            app:chipBackgroundColor="@color/white"
            app:chipStrokeColor="@color/grey_400"
            android:layout_marginRight="@dimen/margin_large"
            android:textAlignment="center"
            app:chipStrokeWidth="1dp"  />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_day"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_medium_2"
            android:text="@string/day"
            android:textColor="@color/grey_600"
            app:chipBackgroundColor="@color/white"
            android:textAlignment="center"
            app:chipStrokeColor="@color/grey_400"
            app:chipStrokeWidth="1dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_night"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/night"
            android:textColor="@color/grey_600"
            android:layout_marginLeft="@dimen/margin_large"
            android:textAlignment="center"
            app:chipBackgroundColor="@color/white"
            app:chipStrokeColor="@color/grey_400"
            app:chipStrokeWidth="1dp" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_medium_3"
        app:layout_constraintTop_toBottomOf="@+id/middleLayout">

        <org.mmtextview.components.MMTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium_3"
            android:layout_marginBottom="@dimen/margin_medium"
            android:text="@string/count"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_beforeEat"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/before_eating"
                android:textColor="@color/grey_600"
                app:chipBackgroundColor="@color/white"
                app:chipStrokeColor="@color/grey_400"
                android:textAlignment="center"
                android:layout_marginRight="@dimen/margin_large"
                app:chipStrokeWidth="1dp"  />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_afterEat"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/after_eating"
                app:chipBackgroundColor="@color/white"
                android:textAlignment="center"
                android:textColor="@color/grey_600"
                app:chipStrokeColor="@color/grey_400"
                app:chipStrokeWidth="1dp" />


        </LinearLayout>



        <org.mmtextview.components.MMTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium_3"
            android:layout_marginBottom="@dimen/margin_medium"
            android:text="@string/note"
            android:layout_marginTop="@dimen/margin_medium_3"
           />
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_corner_btn_white"
                android:padding="5dp"
                android:maxLines="4"
                android:lines="5"
                android:scrollbars="none"
                android:textSize="13sp"
                android:maxLength="2000"
                android:gravity="left"
                android:textColor="@color/black"
                android:id="@+id/ed_medicineNote"
                />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_insert_medicine"
            android:layout_width="wrap_content"
            app:backgroundTint="@color/blue_800"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cornerRadius="15dp"
            android:layout_marginTop="@dimen/margin_xxlarge"
            android:text="@string/insert_medicine"/>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>